<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                    android:id="@+id/llRoot"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">


    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12px"
            android:layout_marginLeft="42px"
            android:layout_marginTop="12px">

            <ImageView
                android:layout_width="144px"
                android:layout_height="144px"
                android:layout_marginBottom="12px"
                android:layout_marginRight="12px"
                android:layout_marginTop="12px"
                android:src="@mipmap/ic_launcher"/>
        </com.zhy.autolayout.AutoRelativeLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="12px"
            android:orientation="vertical">


            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="816px"
                android:layout_height="65px"
                android:layout_marginTop="31px"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvDisplayName"
                    android:layout_width="621px"
                    android:layout_height="65px"
                    android:text="大家庭"
                    android:textColor="@color/black"
                    android:textSize="50px"/>

                <TextView
                    android:id="@+id/tvTime"
                    android:layout_width="195px"
                    android:layout_height="44px"
                    android:text="11:49"
                    android:textAlignment="viewEnd"
                    android:textColor="@color/gray3"
                    android:textSize="36px"/>
            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="816px"
                android:layout_height="65px"
                android:layout_marginBottom="31px">


                <TextView
                    android:id="@+id/tvDraft"
                    android:layout_width="wrap_content"
                    android:layout_height="53px"
                    android:text="[草稿]"
                    android:textColor="@color/red6"
                    android:textSize="40px"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/tvContent"
                    android:layout_width="696px"
                    android:layout_height="53px"
                    android:text="你好你好"
                    android:textColor="@color/gray1"
                    android:textSize="40px"/>

                <TextView
                    android:layout_width="120px"
                    android:layout_height="66px"
                    android:visibility="gone"/>
            </com.zhy.autolayout.AutoLinearLayout>
        </com.zhy.autolayout.AutoLinearLayout>


    </com.zhy.autolayout.AutoLinearLayout>
    <TextView
        style="@style/Line"
        android:layout_gravity="bottom"/>
</com.zhy.autolayout.AutoFrameLayout>